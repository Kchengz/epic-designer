{
  "name": "epic-designer-project",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lib": "vitest run && pnpm run build -F epic-designer",
    "test": "vitest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "examples:build": "pnpm run build --filter epic-examples",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . --fix",
    "postinstall": "pnpm -r run stub --if-present"
  },
  "dependencies": {
    "@vueuse/core": "^12.2.0"
  },
  "devDependencies": {
    "@epic-designer/base-ui": "workspace:*",
    "@epic-designer/core": "workspace:*",
    "@epic-designer/eslint-config": "workspace:*",
    "@epic-designer/hooks": "workspace:*",
    "@epic-designer/manager": "workspace:*",
    "@epic-designer/panel-ui": "workspace:*",
    "@epic-designer/scripts": "workspace:*",
    "@epic-designer/types": "workspace:*",
    "@epic-designer/ui": "workspace:*",
    "@epic-designer/utils": "workspace:*",
    "@turbo/gen": "^2.3.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "2.4.6",
    "epic-designer": "workspace:*",
    "eslint": "^9.20.0",
    "jsdom": "^26.0.0",
    "less": "^4.2.1",
    "naive-ui": "^2.40.4",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "unocss": "^0.65.3",
    "vite": "^6.0.6",
    "vite-plugin-dts": "^4.4.0",
    "vitepress": "1.5.0",
    "vitest": "^2.1.8",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "packageManager": "pnpm@9.10.0"
}
